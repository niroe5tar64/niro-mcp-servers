{
  "sandbox": {
    "enabled": false,
    "allowUnsandboxedCommands": true
  },
  "permissions": {
    "allow": ["*"],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -r -f /)",
      "Bash(rm -fr /)",
      "Bash(rm -f -r /)",
      "Bash(rm -rf /*)",
      "Bash(rm -r -f /*)",
      "Bash(rm -fr /*)",
      "Bash(rm -f -r /*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)",
      "Bash(sudo :*)",
      "Bash(su :*)",
      "Bash(curl :*|:*bash:*)",
      "Bash(curl :*|:*sh:*)",
      "Bash(wget :*|:*bash:*)",
      "Bash(wget :*|:*sh:*)",
      "Bash(bash -c :*)",
      "Bash(sh -c :*)",
      "Bash(eval :*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git clean -xdf:*)",
      "Bash(git clean -ff:*)",
      "Bash(git checkout -f:*)",
      "Bash(git switch -f:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(:*authorized_keys:*)",
      "Bash(:*id_rsa:*)"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspace/.claude/scripts/deny-check.sh"
          }
        ]
      }
    ]
  }
}
