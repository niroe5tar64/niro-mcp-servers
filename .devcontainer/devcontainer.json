{
  "name": "Niro MCP Servers Dev Environment",
  "dockerComposeFile": "../docker-compose.dev.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },

  // Container user
  "remoteUser": "bun",

  // Port forwarding
  "forwardPorts": [3000],

  // Post-create command
  "postCreateCommand": "bun install",

  // Mount the host's .gitconfig
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/bun/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/bun/.ssh,type=bind,consistency=cached"
  ]
}
